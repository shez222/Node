// keys to add in app.js to initiate handlebar 
const expressHbs = require('express-handlebars'); //it is different because it is not builtin in express 

app.engine('hbs', expressHbs());  //expressHbs() this will start or initialize handle bar template engine
app.set('view engine','hbs');  //hbs is name which you eill assign your file as extension
// app.set('view engine','pug');
app.set('views','views');

//there is not more to change in html files except dynamic values in handlebar engine

